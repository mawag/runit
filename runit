    :
}

function  load_env_file() {
    echo "Start Load ENV -> $ENV_FILE"
    if [ -e $ENV_FILE ];then
        source $ENV_FILE
        
        # while read line;do
        #     eval "$line"
        # done < $ENV_FILE
    fi
}

function run_procfile() {
    :
}

function main() {
    verify "$@"
    load_env_file


    
}

main "$@"
